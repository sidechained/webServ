		errorExit(ERR_OPEN, ""); // "" correct way to handle?
	while(1)
	{
		ServerConfig serverConfig(configFile);
        serverConfigs.push_back(serverConfig);
		numServers++;
        if (configFile.eof())
			break;
	}
	print(servers);
	configFile.close();
}

